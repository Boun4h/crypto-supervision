# Redis
REDIS_URL=redis://redis:6379/0
RAW_STREAM=ticks_raw
NORM_STREAM=ticks_norm

# Consumer groups
RAW_GROUP=raw_consumers
NORM_GROUP=norm_consumers

# Panier canonical (séparé par virgules)
CANONICAL_SYMBOLS=BTC/USDT,ETH/USDT,SOL/USDT

# Throttle côté normalizer (ms)
THROTTLE_MS=250

# Kraken (exemple mapping)
KRAKEN_SYMBOLS=XBT/USD,ETH/USD,SOL/USD

# Binance (miniTicker all markets, on filtre côté normalizer via mapping)
BINANCE_ALL_MINITICKER=true

# Poloniex (exemple; adapter à tes canaux réels spot/futures)
POLONIEX_SYMBOLS=BTC_USDT,ETH_USDT,SOL_USDT

# Postgres
PG_DSN=postgresql://crypto:crypto@postgres:5432/crypto
